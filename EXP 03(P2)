📘 LibraryManager.js
import React, { useState } from "react";

const LibraryManager = () => {
  const [books, setBooks] = useState([
    { title: "The Great Gatsby", author: "F. Scott Fitzgerald" },
    { title: "1984", author: "George Orwell" },
    { title: "To Kill a Mockingbird", author: "Harper Lee" },
  ]);

  const [searchTerm, setSearchTerm] = useState("");
  const [newBook, setNewBook] = useState({ title: "", author: "" });

  // Filter books based on search term
  const filteredBooks = books.filter(
    (book) =>
      book.title.toLowerCase().includes(searchTerm.toLowerCase()) ||
      book.author.toLowerCase().includes(searchTerm.toLowerCase())
  );

  // Add a new book to the list
  const handleAddBook = (e) => {
    e.preventDefault();
    if (!newBook.title || !newBook.author) return;
    setBooks([...books, newBook]);
    setNewBook({ title: "", author: "" });
  };

  // Remove a book from the list
  const handleRemoveBook = (index) => {
    setBooks(books.filter((_, i) => i !== index));
  };

  return (
    <div className="p-8 bg-gray-50 min-h-screen">
      <h1 className="text-3xl font-bold text-center mb-6">📚 Library Manager</h1>

      {/* Search Box */}
      <div className="max-w-md mx-auto mb-6">
        <input
          type="text"
          placeholder="Search by title or author..."
          value={searchTerm}
          onChange={(e) => setSearchTerm(e.target.value)}
          className="w-full p-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
      </div>

      {/* Add Book Form */}
      <form
        onSubmit={handleAddBook}
        className="max-w-md mx-auto mb-6 flex flex-col gap-3"
      >
        <input
          type="text"
          placeholder="Book Title"
          value={newBook.title}
          onChange={(e) => setNewBook({ ...newBook, title: e.target.value })}
          className="p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400"
        />
        <input
          type="text"
          placeholder="Author Name"
          value={newBook.author}
          onChange={(e) => setNewBook({ ...newBook, author: e.target.value })}
          className="p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400"
        />
        <button
          type="submit"
          className="bg-green-600 text-white py-2 rounded-lg hover:bg-green-700 transition"
        >
          ➕ Add Book
        </button>
      </form>

      {/* Book List */}
      <div className="max-w-lg mx-auto">
        {filteredBooks.length === 0 ? (
          <p className="text-center text-gray-500">No books found.</p>
        ) : (
          filteredBooks.map((book, index) => (
            <div
              key={index}
              className="flex justify-between items-center bg-white p-4 mb-3 rounded-xl shadow-sm"
            >
              <div>
                <h3 className="font-semibold text-lg">{book.title}</h3>
                <p className="text-gray-600 text-sm">by {book.author}</p>
              </div>
              <button
                onClick={() => handleRemoveBook(index)}
                className="text-red-500 hover:text-red-700 font-bold"
              >
                ✖
              </button>
            </div>
          ))
        )}
      </div>
    </div>
  );
};

export default LibraryManager;

⚙️ App.js (to render it)
import React from "react";
import LibraryManager from "./LibraryManager";

const App = () => {
  return (
    <div>
      <LibraryManager />
    </div>
  );
};

export default App;
